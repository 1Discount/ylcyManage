<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Manage.dao.MenuInfoDao">
	
	<resultMap type="menuInfoDTO" id="menuInfoDTO"></resultMap>
	
	<sql id="allColumn">
	   menuInfoID,menuName,menuPath,requestWay,menuGroupID,sortCode,remark,creatorUserID,creatorDate,modifyUserID,modifyDate,sysStatus
	</sql>
	<!-- 条件查询sql片段 -->
	<sql id="queryPage_filter_sql">
		<if test="obj!= null and obj.menuName !=null ">
		<![CDATA[
			and menuName like '%${obj.menuName}%'
		]]>
		</if>
	</sql>
	
	<insert id="insertinfo" parameterType="menuInfoDTO">
	<![CDATA[
		insert into MenuInfo ( 
	]]>
	<include refid="allColumn"></include>
	<![CDATA[
		) value(#{menuInfoID},#{menuName},#{menuPath},#{requestWay},#{menuGroupID},#{sortCode},#{remark},#{creatorUserID},now(),null,null,1)
	]]>
	</insert>
	
	<!-- 修改 -->
	<update id="editinfo" parameterType="menuInfoDTO">
	<![CDATA[
		update MenuInfo set menuName=#{menuName},menuPath=#{menuPath},menuGroupID=#{menuGroupID},menuGroupID=#{menuGroupID},remark=#{remark},sortCode=#{sortCode} where menuInfoID=#{menuInfoID}
	]]>
	</update>
	<!-- 删除 -->
	<update id="deleteinfo" parameterType="String">
	<![CDATA[
		update MenuInfo set sysStatus=0 where menuInfoID=#{menuInfoID}
	]]>
	</update>
	
	<!-- 根据菜单组ID查询菜单 -->
	<select id="selectbygroupid" resultType="menuInfoDTO" parameterType="String">
	<![CDATA[
			select menuInfoID,MenuName,sortCode,menuPath,requestWay,menuGroupID,remark,creatorUserID,creatorDate from MenuInfo where sysStatus=1 and menuGroupID=#{menuGroupID}
	]]>
	</select>
	
	<!-- 分页查询-->
	<select id="queryPage" resultMap="menuInfoDTO" parameterType="searchDTO">
		<![CDATA[
			select menuInfoID,MenuName,sortCode,menuPath,requestWay,menuGroupID,remark,creatorUserID,creatorDate from MenuInfo where sysStatus=1
		]]>
		<include refid="queryPage_filter_sql" />
		order by
		<if test="sortName == 'creatorDate' or sortName == '' or sortName == null"> creatorDate </if>
		<if test="sortName!=null and sortName!=''">${sortName}</if>
		<if test="sortOrder == 'desc'"> DESC </if>
		<if test="sortOrder == 'asc'"> ASC </if>
		 LIMIT #{startIndex},#{endIndex}
	</select>
	<!-- 查询总记录 -->
	<select id="getcount" resultType="Integer" parameterType="searchDTO">
	<![CDATA[
			select count(*) from MenuInfo where sysStatus=1 
	]]>
	<include refid="queryPage_filter_sql" />
	</select>
	
	<!-- 根据多个菜单ID查询菜单列表 -->
	<select id="batchmenubyid" resultMap="menuInfoDTO" parameterType="java.util.List">
	  select menuInfoID,menuName,menuPath,requestWay,menuGroupID,sortCode,remark,creatorUserID,creatorDate from MenuInfo where sysStatus=1 and 
	  menuInfoID in(
	  <foreach collection="list" item="item" index="index" separator="," >
	   #{item.menuID}
      </foreach>
	  ) order by sortCode+0 desc
	</select>
	
	

</mapper>